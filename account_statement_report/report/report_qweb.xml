<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layout_custom">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}">
            <t t-out="0"/>
        </t>
        <t t-else="else" t-call="web.external_layout_standard">
            <t t-out="0"/>
        </t>

    </template>
    <template id="report_statement_template">
        <t t-call="account_statement_report.external_layout_custom">
            <t t-set="o" t-value="o"/>
            <div class="page">
                <style>
                    html *
                    {
                    font-family: sakkal majalla;
                    }
                </style>
                <div class="row" style="margin-top:-50px">
                    <div class="col-12">
                        <center>
                            <h3>كشف حساب -
                                <span t-esc="o.company_id.name"/>
                            </h3>
                        </center>
                        <!--                        <h3></h3>-->
                        <!--                        <h3><span t-esc="o.company_id.name"/></h3>-->
                    </div>
                </div>
                <br/>
                <div class="row mt32 mb32">
                    <div class="col-4">
                        <t>
                            <strong>كود الحساب:</strong>
                            <span t-esc="o.code"/>
                        </t>
                    </div>
                    <div class="col-8">
                        <t>
                            <strong>الحساب:</strong>
                            <span t-esc="o.name"/>
                        </t>
                    </div>

                    <!--                    <div class="col-4">-->
                    <!--                        <t>-->
                    <!--                            <strong>Type:</strong>-->
                    <!--                            <span t-esc="o.user_type_id.name"/>-->
                    <!--                        </t>-->
                    <!--                    </div>-->
                </div>
                <br/>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th style="width: 20%;">
                                <center>التاريخ</center>
                            </th>
                            <th style="width: 25%;">
                                <center>البيان</center>
                            </th>
                            <th style="width: 15%;">
                                <center>مدين</center>
                            </th>
                            <th style="width: 15%;">
                                <center>دائن</center>
                            </th>
                            <th style="width: 25%;">
                                <center>الرصيد</center>
                            </th>
                        </tr>
                    </thead>
                    <t t-set="total_debit" t-value="0.0"/>
                    <t t-set="total_credit" t-value="0.0"/>
                    <t t-set="m_index" t-value="0.0"/>
                    <t t-set="old_balance" t-value="0.0"/>

                    <tr t-foreach="o.get_move_lines(from_date, to_date)" t-as="line">
                        <td style="width: 20%;">
                            <center>
                                <t t-esc="line.date"/>
                            </center>
                        </td>
                        <td style="width: 25%;">
                            <center>
                                <t t-esc="line.move_id.ref"/>
                            </center>
                        </td>
                        <td style="width: 15%;">
                            <t t-if="m_index==0">
                                <center>
                                    0
                                </center>
                            </t>
                            <t t-else="">
                                <center>
                                    <t t-esc="old_balance"
                                       t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                </center>
                            </t>

                        </td>
                        <td style="width: 15%;">
                            <center>
                                <t t-esc="line.credit"
                                   t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                            </center>
                        </td>
                        <td style="width: 25%;">
                            <center>
                                <t t-esc="(line.debit+old_balance)-line.credit"
                                   t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                            </center>

                        </td>

                        <t t-set="total_debit" t-value="total_debit+old_balance"
                           t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                        <t t-set="total_credit" t-value="total_credit+line.credit"
                           t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                        <t t-set="m_index" t-value="m_index+1"/>
                        <t t-set="old_balance" t-value="(line.debit+old_balance)-line.credit"/>

                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <center>
                                <strong>Total</strong>
                            </center>
                        </td>
                        <td>
                            <center>
                                <strong>
                                    <t t-esc="total_debit"
                                       t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                </strong>
                            </center>
                        </td>
                        <td>
                            <center>
                                <strong>
                                    <t t-esc="total_credit"
                                       t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                </strong>
                            </center>
                        </td>
                        <td>
                            <center>
                                <strong>
                                    <t t-esc="total_debit-total_credit"
                                       t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>
                                </strong>
                            </center>
                        </td>
                    </tr>
                </table>
            </div>
        </t>
    </template>
    <template id="report_statement_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="account_statement_report.report_statement_template"/>
            </t>
        </t>
    </template>
</odoo>

