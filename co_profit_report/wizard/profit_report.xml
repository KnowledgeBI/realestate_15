<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="profit_report_view_form" model="ir.ui.view">
            <field name="name">profit.report.form</field>
            <field name="model">profit.report</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                            <group>
                                <field name="analytic_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_print_xlsx" string="Export" class="btn-primary" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="profit_report_window_action" model="ir.actions.act_window">
            <field name="name">Profit Report</field>
            <field name="res_model">profit.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="profit_report_menu"
                  name="Profit Report"
                  parent="co_project.reports_menu"
                  action="profit_report_window_action"
                  sequence="20"/>

    </data>
</odoo>
