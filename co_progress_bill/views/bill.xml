<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="view_move_form_bill" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='account_analytic_id']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="string">Project</attribute>
                <attribute name="domain">[('is_project', '=', 'True')]</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="date_from" required="1"/>
                <field name="date_to" required="1"/>
            </xpath>
<!--             <xpath expr="//field[@name='amount_total']" position="attributes">
                <attribute name="string">Current Work</attribute>
            </xpath> -->
<!--             <xpath expr="//field[@name='amount_total']" position="before">
                <field name="current_work"/>
                <field name="previous_work"/>
                <field name="previous_payment"/>
                <field name="total_due"/>
            </xpath> -->
            <xpath expr="//field[@name='tax_totals_json']" position="before">

                <label for="current_work" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="current_work" class="oe_inline"/>
                    </div>
                <label for="previous_work" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="previous_work" class="oe_inline"/>
                    </div>
                <label for="previous_payment" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="previous_payment" class="oe_inline"/>
                    </div>
                <label for="total_due" groups="base.group_user"/>
                    <div class="text-nowrap" groups="base.group_user">
                        <field name="total_due" class="oe_inline"/>
                    </div>

            </xpath>
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="purchase_id" string="Contract" required="1"/>
                <field name="is_progress_bill"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='quantity']" position="after">
                <field name="order_qty" readonly="1" force_save="1"/>
                <field name="previous_qty" readonly="1" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']//tree/field[@name='quantity']" position="after">
                <field name="order_qty" force_save="1" incisible="1"/>
                <field name="previous_qty" force_save="1" incisible="1"/>
            </xpath>

        </field>
    </record>


    <record id="view_invoice_tree_bill" model="ir.ui.view">
        <field name="name">account.move.name</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="after">
                <field name="account_analytic_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </xpath>

        </field>
    </record>

    <record id="action_move_in_invoice_type" model="ir.actions.act_window">
        <field name="name">Progress Bills</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="domain">[('move_type','=','in_invoice'),('is_progress_bill','=',True)]</field>
        <field name="context">{'default_move_type': 'in_invoice', 'move_type': 'in_invoice', 'journal_type': 'purchase',
            'default_is_progress_bill': True}
        </field>
    </record>


    <record model="ir.actions.act_window.view" id="action_move_in_invoice_type_view_tree">
        <field name="view_mode">tree</field>
        <field name="sequence">1</field>
        <field name="view_id" ref="view_invoice_tree_bill"/>
        <field name="act_window_id" ref="action_move_in_invoice_type"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_move_in_invoice_type_view_form">
        <field name="view_mode">form</field>
        <field name="sequence">2</field>
        <field name="view_id" ref="view_move_form_bill"/>
        <field name="act_window_id" ref="action_move_in_invoice_type"/>
    </record>

    <menuitem id="bill_progress_bill" name="Progress Bill"
              parent="co_subcontractor_contract.subcontractors_root_menu"
              action="action_move_in_invoice_type"
              sequence="2"/>

</odoo>
