<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_contract_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="co_customer_contract.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(sale.action_view_sale_advance_payment_inv)d']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_view_invoice" string="Create Invoice" type="object" class="oe_highlight"
                            context="{'create_invoice':True,'progress_bill':True}"
                            attrs="{'invisible': [('state', 'not in', ('sale', 'done'))]}"/>
                </xpath>
                <xpath expr="//div[@name='button_box']//button[@name='action_view_invoice']" position="replace">
                    <button name="action_view_invoice"
                            type="object"
                            class="oe_stat_button"
                            context="{'progress_bill':1}"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible':[('invoice_num','&lt;=',0)]}"
                    >
                        <field name="invoice_num" widget="statinfo" string="Invoices"/>
                        <field name="invoice_count" invisible="1"/>
                    </button>
                </xpath>

            </field>
        </record>


    </data>
</odoo>