<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="progress_invoice_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <div class="row">
                        <div class="col-6">
                            <h2>
                                <span t-if="o.move_type == 'out_invoice' and o.is_progress_bill and o.state in ('open', 'in_payment', 'paid')">
                                    Progress Invoice
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.is_progress_bill and o.state == 'draft'">Draft
                                    Progress Invoice
                                </span>
                                <span t-if="o.move_type == 'out_invoice' and o.is_progress_bill and  o.state == 'cancel'">
                                    Cancelled
                                    Progress Invoice
                                </span>
                                <span t-if="o.move_type == 'out_refund' and o.is_progress_bill">Progress Credit Note</span>
                                <span t-if="o.move_type == 'in_refund' and o.is_progress_bill">Progress refund</span>
                                <span t-if="o.move_type == 'in_invoice' and o.is_progress_bill">Progress Bill</span>
                                <span t-field="o.name"/>
                            </h2>
                        </div>
                        <div class="col-6">
                            <div t-if="o.partner_id" name="div_customer_address">
                                <strong t-field="o.partner_id.name"/>
                                <br/>
                                <t t-if="o.partner_id.mobile">
                                    <span t-field="o.partner_id.mobile"/>
                                    <br/>
                                </t>
                                <t t-if="o.partner_id.phone">
                                    <span t-field="o.partner_id.phone"/>
                                    <br/>
                                </t>
                                <t t-if="o.partner_id.street">
                                    <span t-field="o.partner_id.street"/>
                                    <br/>
                                </t>
                                <t t-if="o.partner_id.street2">
                                    <span t-field="o.partner_id.street2"/>
                                    <br/>
                                </t>
                                <t t-if="o.partner_id.city">
                                    <span t-field="o.partner_id.city"/>-
                                </t>
                                <t t-if="o.partner_id.state_id">
                                    <span t-field="o.partner_id.state_id"/>-
                                </t>
                                <t t-if="o.partner_id.country_id">
                                    <span t-field="o.partner_id.country_id"/>
                                </t>
                            </div>

                        </div>
                    </div>
                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="o.name" name="description">
                            <strong>Description:</strong>
                            <p class="m-0" t-field="o.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2"
                             t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state in ('open', 'in_payment', 'paid')"
                             name="o.invoice_date_due">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="invoice_origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div name="ref" class="col-auto mw-100 mb-2" t-if="o.ref">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th rowspan="2" class="text-center">
                                    <span>Description</span>
                                </th>
                                <th rowspan="2" class="text-center">
                                    <span>Unit Of Measure</span>
                                </th>
                                <th colspan="3" class="text-center">
                                    <span>Quantity</span>
                                </th>
                                <th rowspan="2" t-attf-class="text-center">
                                    <span>Unit Price</span>
                                </th>
                                <th rowspan="2" class="text-center">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                            <tr>
                                <th class="text-center">
                                    <span>Previous QTY</span>
                                </th>
                                <th class="text-center">
                                    <span>Current QTY</span>
                                </th>
                                <th class="text-center">
                                    <span>Total</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="o.invoice_line_ids" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                   groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.product_uom_id"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.previous_qty"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="line.quantity + line.previous_qty"/>
                                        </td>
                                        <td t-attf-class="text-center">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-center o_price_total">
                                            <span t-field="line.price_subtotal"
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total"
                                                  groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_total">
                                        <td>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_subtotal" style="">
                                        <td>
                                            <strong>Paid</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="o.amount_total - o.amount_residual"/>
                                            <span t-esc="o.currency_id.symbol"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_subtotal">
                                        <td>
                                            <strong>Remaining</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_residual"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <p t-if="o.ref">
                        Please use the following communication for your payment :
                        <b>
                            <span t-field="o.ref"/>
                        </b>
                    </p>
<!--                    <p t-if="o.comment" name="comment">-->
<!--                        <span t-field="o.comment"/>-->
<!--                    </p>-->
                    <p t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <div id="qrcode"
                         t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.partner_bank_id.acc_number != False)">
                        <p t-if="(o.partner_bank_id.qr_code_valid)">
                            <strong class="text-center">Scan me with your banking app.</strong>
                            <br/>
                            <br/>
                            <img class="border border-dark rounded"
                                 t-att-src="o.partner_bank_id.build_qr_code_url(o.amount_residual,(o.ref) if (o.ref) else o.name)"/>
                        </p>
                        <p t-if="(o.partner_bank_id.qr_code_valid == False)">
                            <strong class="text-center">The SEPA QR Code informations are not set correctly.</strong>
                            <br/>
                        </p>
                    </div>

                </div>
            </t>
        </template>


        <template id='progress_invoice'>
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                       t-value="o.user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="co_progress_bill.progress_invoice_document" t-lang="lang"/>
                </t>
            </t>
        </template>


        <!-- QWeb Reports -->
        <!-- NAME & FILE_NAME should be the same -->
        <report
                id="progress_invoice_report"
                model="account.move"
                report_type="qweb-pdf"
                string="Progress Invoice/Bill"
                name="co_progress_bill.progress_invoice"
                print_report_name="'%s' % (object.name)"
        />


    </data>
</odoo>