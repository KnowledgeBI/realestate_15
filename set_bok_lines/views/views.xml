<odoo>
    <data>
        <record id="view_account_analytic_account_form" model="ir.ui.view">
            <field name="name">account.analytic.account</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="price_percent_inc"/>
                    <field name="qty_percent_inc"/>
                </xpath>
            </field>
        </record>
        <record id="view_contract_form" model="ir.ui.view">
            <field name="name">sale.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="co_customer_contract.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_pr" string="Purchase Agreements" type="object" class="oe_stat_button" icon="fa-pencil-square-o"/>
                    <button name="action_view_purchases" string="Purchases" type="object" class="oe_stat_button" icon="fa-shopping-cart"/>
                    <button name="action_view_outs" string="Pickings" type="object" class="oe_stat_button" icon="fa-truck"/>
<!--                    <button name="action_view_subcontractor" string="Contracts" type="object" class="oe_stat_button" icon="fa-pencil-square-o"/>-->

                </xpath>
            </field>
        </record>
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase_order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="co_subcontractor_contract.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                    <field name="boq_line_id" force_save="1" invisible="1"/>
                    <field name="boq_ref" force_save="1" />
                    <field name="area_id" force_save="1"/>
                    <field name="floor_id" force_save="1"/>


                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="is_boq_follow_up" />
                    <field name="so_id" invisible="1"/>
                    <div>
                        <button attrs="{'invisible':['|',('is_boq_follow_up','=',False),('state','=','purchase')]}" string="Set Lines" context="{'esc':1}" type="object" name="set_bok_lines" icon="fa-list" />
                    </div>
                </xpath>
            </field>
        </record>
        <record id="view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="after">
                    <field name="boq_line_id"  force_save="1" invisible="1"/>
                    <field name="boq_ref" force_save="1" />
                    <field name="area_id" force_save="1"/>
                    <field name="floor_id" force_save="1"/>

                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="is_boq_follow_up" invisible="1"/>
                    <field name="so_id" invisible="1"/>
                    <div>
                        <button invisible="1" attrs="{'invisible':['|',('is_boq_follow_up','=',False),('picking_type_code','!=','outgoing')]}" string="Set Lines" context="{'esc':1}" type="object" name="set_bok_lines" icon="fa-list" />
                    </div>
                </xpath>
            </field>
        </record>
