        <record id="view_purchase_requisition_form" model="ir.ui.view">
            <field name="name">purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_transfer" attrs="{'invisible':['|',('transfer_id','!=',False),('state','!=','in_progress')]}"  string="Transfer" type="object" class="btn-primary"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='product_id']" position="before">
                    <field name="area_id" force_save="1"/>
                    <field name="sale_line_id" force_save="1" invisible="1"/>

                    <field name="floor_id" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree//field[@name='product_id']" position="after">
                    <field name="boq_line_id" force_save="1" invisible="1"/>

                </xpath>
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="transfer_picking_type_id"/>
                    <field name="transfer_id" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="so_id" invisible="1"/>
                    <div>
                        <button  attrs="{'invisible':[('state','!=','draft')]}" string="Set Lines" context="{'esc':1}" type="object" name="set_bok_lines" icon="fa-list" />
                    </div>
                </xpath>
            </field>
        </record>

