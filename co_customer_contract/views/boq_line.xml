<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="order_line_show_details" model="ir.ui.view">
            <field name="name">sale.order.line.form</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_categ_id"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="price_subtotal"/>
                            </group>
                            <group>
                                <field name="price_unit"/>
                                <field name="cost_plus"/>
                                <field name="cost_plus_perc" invisible="1"/>
                                <field name="unit_cost"/>
                                <field name="total_cost"/>
                                <field name="margin_perc"/>
                                <field name="margin_price"/>
                            </group>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <field name="boq_line_ids">
                            <tree editable="bottom">
                                <field name="area_id"/>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="qty"/>
                                <field name="product_uom_id"/>
                                <field name="unit_cost"/>
                                <field name="subtotal_cost" sum="Total Cost"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer class="oe_edit_only">
                        <button string="Save" special="save" class="oe_highlight"/>
                        <button string="Discard" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="boq_line_view_form" model="ir.ui.view">
            <field name="name">boq.line.form</field>
            <field name="model">boq.line</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="area_id"/>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="product_uom_id"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="unit_cost"/>
                                <field name="subtotal_cost"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="boq_line_view_tree" model="ir.ui.view">
            <field name="name">boq.line.tree</field>
            <field name="model">boq.line</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="area_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="qty" sum="Total Qty"/>
                    <field name="product_uom_id"/>
                    <field name="unit_cost" sum="Total Unit Cost"/>
                    <field name="subtotal_cost" sum="Total Subtotal Cost"/>
                </tree>
            </field>
        </record>


        <record id='boq_line_view_search' model='ir.ui.view'>
            <field name='name'>boq.line.filter</field>
            <field name='model'>boq.line</field>
            <field name='arch' type='xml'>
                <search string=''>
                    <field name="order_line_id"/>
                    <field name="area_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="qty"/>
                    <group string='Group By'>
                        <filter name='by_order_line_id' string='Order Line' context="{'group_by': 'order_line_id'}"/>
                    </group>
                </search>
            </field>
        </record>


    </data>
</odoo>