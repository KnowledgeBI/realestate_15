<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="equipment_timesheet_search" model="ir.ui.view">
            <field name="name">equipment.timesheet</field>
            <field name="model">equipment.timesheet</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="analytic_account_id"/>
                    <field name="sale_order_id" />
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <filter name="draft" string="Draft"
                        domain="[('state', '=', 'draft')]"/>
                    <filter name="approved" string="Approved"
                            domain="[('state', '=', 'approved')]"/>
                    <filter name="waiting" string="Waiting Approve"
                            domain="[('state', '=', 'waiting')]"/>
                    <group string="Group By" name="groupby">
                        <filter name="date_from_groupby" string="Date From"
                                context="{'group_by': 'date_from'}"/>
                        <filter name="date_to_groupby" string="Date To"
                                context="{'group_by': 'date_to'}"/>

                        <filter name="analytic_groupby" string="Analytic Account"
                                context="{'group_by': 'analytic_account_id'}"/>
                        <filter name="currency_groupby" string="Currency"
                                context="{'group_by': 'currency_id'}"/>
                        <filter name="sale_order_groupby" string="Sale Order"
                                context="{'group_by': 'sale_order_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="equipment_timesheet_tree" model="ir.ui.view">
            <field name="name">equipment.timesheet</field>
            <field name="model">equipment.timesheet</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="analytic_account_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="equipment_timesheet_form" model="ir.ui.view">
            <field name="name">equipment.timesheet</field>
            <field name="model">equipment.timesheet</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_request_approve" string="Request Approve" class="oe_highlight" states="draft" type="object"/>
                        <button name="action_approve" groups="equipment_timesheet.group_equipment_timesheet" string="Approve" class="oe_highlight" states="waiting" type="object"/>
<!--                        <button name="action_create_entry" attrs="{'invisible':['|',('state','=','approved'),('move_id','=',False)]}" groups="equipment_timesheet.group_equipment_timesheet" string="Create Entry" class="oe_highlight"  type="object"/>-->
                        <field name="state" widget="statusbar"  />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h5>
                                <field name="name" required="1" placeholder="......" attrs="{'readonly':[('state','=','approved')]}"/>
                            </h5>
                        </div>
                        <group>
                            <group>
                                <label for="date_from" string="Date"/>
                                <div class="o_row">
                                    <field name="date_from" attrs="{'readonly':[('state','=','approved')]}" required="1" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_to'}"/>
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_to" attrs="{'readonly':[('state','=','approved')]}" required="1" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_from'}"/>
                                </div>
<!--                                <field name="date_from" required="1"/>-->
<!--                                <field name="date_to" required="1"/>-->
                                <field name="analytic_account_id" attrs="{'readonly':[('state','=','approved')]}" options="{'no_create':1}" required="1"/>
                                <field name="sale_order_id" attrs="{'readonly':[('state','=','approved')]}"  domain="[('analytic_account_id','=',analytic_account_id),('state','in',['sale'])]" options="{'no_create':1}" required="1"/>
                                <field name="currency_id" attrs="{'readonly':[('state','=','approved')]}"  options="{'no_create':1}" required="1"/>
                            </group>
                            <group>
                                <field name="journal_id" attrs="{'readonly':[('state','=','approved')]}" options="{'no_create':1}" required="1"/>
                                <field name="move_id"  options="{'no_create':1}" readonly="1" attrs="{'readonly':[('state','=','approved')],'invisible':[('move_id','=',False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Lines">
                                <field name="line_ids" attrs="{'readonly':[('state','=','approved')]}">
                                    <tree editable="bottom">
                                        <field name="date" required="1"/>
                                        <field name="weekday" force_save="1" required="1" readonly="1"/>
                                        <field name="check_in" required="1" widget="float_time" />
                                        <field name="check_out" required="1" widget="float_time"/>
                                        <field name="hour_no" widget="float_time" readonly="1" force_save="1"/>

                                        <field name="boq_line_id" domain="[('order_id','=',parent.sale_order_id)]" options="{'no_create':1}" required="1"/>
                                        <field name="product_id" options="{'no_create':1}" required="1"/>
                                        <field name="note" />
                                        <field name="category_id" required="1" />
                                        <field name="unit_cost" widget="monetary" />
                                        <field name="total_cost" widget="monetary" />

                                        <field name="currency_id" invisible="1"/>
                                        <field name="area_id" options="{'no_create':1}" required="0"/>
                                        <field name="floor_id" options="{'no_create':1}" required="0"/>
                                        <field name="supervisor" />
                                        <field name="engineer" />
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="equ_total">
                                <field name="total_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_hour_no" />
                                <field name="total_day_no" />

                            </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="equipment_timesheet_action" model="ir.actions.act_window">
            <field name="name">Equipment Timesheet</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">equipment.timesheet</field>
            <field name="view_mode">tree,form,search</field>
        </record>
        <menuitem id="internal_equipment_timesheet_menu" name="Internal Equipment Timesheet" parent="co_subcontractor_contract.subcontractors_root_menu" action="equipment_timesheet_action" sequence="30"/>
    </data>
</odoo>
